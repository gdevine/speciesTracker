<% provide(:title, 'Species View') %>
<% provide(:pageheading, 'Species '+ @species.id.to_s) %>

<!-- Add edit/delete buttons if authorized -->
<% if can? :crud, @species %>
	<div class="row bottomspace">  
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
			<a class="btn btn-block btn-info" data-toggle="dropdown" href="#" id="options_button">
			  Options
			  <span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
			  <li><%= link_to "Edit Species", edit_species_path(id:@species.id) %> </li>
			  <li><%= link_to "Delete Species", @species, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		  </ul>
		</div>
	</div>
<% end %>


<div class="row topspace20">
  <div class="col-md-12">	
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Genus</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @species.genus %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Species</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @species.species %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Common Name</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @species.common_name %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-3 col-md-3">
		    <p class="text-left">Description</p>
		  </div>   
		  <div class="col-md-6">
		    <p class="text-muted"><%= @species.description %></p>
		  </div>
		</div>
		
  </div>
  
</div>