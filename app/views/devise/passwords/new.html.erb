<% provide(:title, "Password Reset") %>
<h1>Forgot your Password?</h1>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
  	<%= f.label :email, "Email", :class => "col-lg-2 control-label" %>
  	<div class="col-lg-8">
      <%= f.email_field :email, :class => "form-control", :autofocus => true  %>
    </div>
  </div>
  
  <div class="form-group topspace20">
    <div class="col-sm-4 col-sm-offset-4 topspace20 bottomspace">
      <%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-primary" %>
    </div>
  </div>

<% end %>