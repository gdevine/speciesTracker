<% provide(:title, "Sign In") %>
<h1>Sign in</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  
  <div class="form-group">
  	<%= f.label :email, "Email", :class => "col-lg-2 control-label" %>
  	<div class="col-lg-8">
      <%= f.email_field :email, :autofocus => true, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
  	<%= f.label :password, "Password", :class => "col-lg-2 control-label"  %>
    <div class="col-lg-8">
      <%= f.password_field :password, :class => "form-control" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group checkbox">
      <div class="col-xs-1 col-xs-offset-2">
    	<%= f.check_box :remember_me, :type => "checkbox", :class => "form-control pull-right", :checked=>true, :unchecked_value=>"0", :checked_value=>"1" %> 
      </div>
      <%= f.label :remember_me,  "Keep me logged in", :class => "col-sm-2" %>
    </div>
  <% end %>
  
  
  <div class="form-group topspace50">
    <div class="col-sm-4 col-sm-offset-4 topspace20 bottomspace">
      <%= f.submit "Sign In", :class => "btn btn-large btn-primary" %>
    </div>
  </div>
  
<% end %>

<div class="rowline">
  <%= render "devise/shared/links" %>
</div>
