<div class="row topspace20">
  <div class="col-xs-12 col-md-3">
		<div class="btn-group btn-block">
		  <button class="col-xs-12 col-md-12 btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="true">
		    Menu <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu btn-block" role="menu">
		    <li>
		      <%= link_to 'View Sightings', sightings_path, :id => 'sightings_index' %>
		    </li>

		    <li>
		      <%= link_to 'View Species', species_index_path, :id => 'species_index' %>
		    </li>

		    <li>
		      <%= link_to 'View Sites', sites_path, :id => 'sites_index' %>
		    </li>

		    <li role="presentation" class="divider"></li>

		    <li>
		      <%= link_to 'Create New Sighting', new_sighting_path, :id => 'sightings_new' %>
		    </li>
		    <% if current_user.role != 'user' %>
		      <li>
		        <%= link_to 'Create New Species', new_species_path, :id => 'species_new' %>
		      </li>
		    <% end %>
		    <% if current_user.role != 'user' %>
		      <li>
		        <%= link_to 'Create New Site', new_site_path, :id => 'sites_new' %>
		      </li>
		    <% end %>
		  </ul>
		</div>

  </div>
</div>
