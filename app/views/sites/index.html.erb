<% content_for :page_scripts do %>
  <script>
    $('#sites').DataTable({
      pagingType: "simple",
      responsive: false,
      bJQueryUI: false
    });
  </script>
<% end %>

<% provide(:title, 'Sites') %>
<% provide(:pageheading, 'Available Sites') %>

<% if @sites.any? %>
	<div class="row topspace20 bottomspace">
	  <div class="col-xs-12">
      <%= link_to "View Map Mode", map_sites_path, :class => "btn btn-block btn-link" %>
		</div>
	</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= render 'sites/sites' %>
  </div>
</div>
