<% content_for :page_scripts do %>
  <script>
    $('#sites_table').DataTable({
      pagingType: "simple",
      responsive: false,
      bJQueryUI: false,
      "columnDefs": [
        { "orderable": false, "targets": 3 }
      ]
    });
  </script>

  <script>
    var sites_table;
    sites_table = null;

    document.addEventListener("turbolinks:load", function() {
      return sites_table = $('#sites_table').DataTable();
    });
    document.addEventListener("turbolinks:before-cache", function() {
      if ($('#sites_table_wrapper').length === 1) {
        return sites_table.destroy();
      }
    });
  </script>
  <script>
      $('#sites_table tr').click(function() {
      var href = $(this).find("a").attr("href");
      if(href) {
          window.location = href;
      }
    });
  </script>
<% end %>

<% provide(:title, 'Sites') %>
<% provide(:pageheading, 'Available Sites') %>

<% if @sites.any? %>
	<div class="row topspace20 bottomspace">
	  <div class="col-xs-12">
      <%= link_to "View Map Mode", map_sites_path, :class => "btn btn-block btn-link" %>
		</div>
	</div>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= render 'sites/sites' %>
  </div>
</div>
