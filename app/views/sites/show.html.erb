<% provide(:title, 'Site View') %>
<% provide(:pageheading, 'Site '+ @site.id.to_s) %>
  


<!-- Add edit/delete buttons if authorized -->
<% if can? :crud, @site %>
	<div class="row bottomspace">  
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
			<a class="btn btn-block btn-info" data-toggle="dropdown" href="#" id="options_button">
			  Options
			  <span class="caret"></span>
			</a>
			<ul class="dropdown-menu">
			  <li><%= link_to "Edit Site", edit_site_path(id:@site.id) %> </li>
			  <li><%= link_to "Delete Site", @site, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		  </ul>
		</div>
	</div>
<% end %>


<div class="row topspace20">
  <div class="col-md-6">	
	  <!-- Add map view of site -->
	  <div class='topspace20 bottomspace', 'width: 100%;'>
		  <div id="map" style='width: 100%; height: 400px;'></div>
		</div>
  </div>
  
  <div class="col-md-6 topspace20">	
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Name</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= @site.name %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Street</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= @site.street %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Suburb</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= @site.suburb %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Comments</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= @site.comments %></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Centre Latitude</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= number_with_precision(@site.centre_lat, :precision => 2)%></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Centre Longitude</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= number_with_precision(@site.centre_lon, :precision => 2)%></p>
		  </div>
		</div>
		
		<div class="row">
		  <div class="col-md-offset-1 col-md-4">
		    <p class="text-left">Centre Altitude</p>
		  </div>   
		  <div class="col-md-7">
		    <p class="text-muted"><%= number_with_precision(@site.centre_alt, :precision => 2)%></p>
		  </div>
		</div>
		
  </div>
  
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ 
	  provider: {
    }, 
    internal: {
  	  id: 'map'
    }
  }, 
  function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
  handler.getMap().setZoom(10);
});
</script>